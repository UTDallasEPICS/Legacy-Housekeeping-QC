
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User table
// One to many relation with Admin and Leader
model User {
  user_id      String   @id @default(uuid())
  first_name   String
  last_name    String
  email        String
  phone_number String
  address      String
  admin        Admin[]
  leader       Leader[]
}

// Admin table
model Admin {
  admin_id String @id @default(uuid())
  user     User   @relation(fields: [userId], references: [user_id])
  userId   String
}

// Leader table
model Leader {
  leader_id String @id @default(uuid())
  user      User   @relation(fields: [userId], references: [user_id])
  userId    String
}

// Team Members table
// One to one relation with Points
model Team_Members {
  member_id  String   @id @default(uuid())
  first_name String
  last_name  String
  email      String
  points     Points[]
}

model Points {
  points_id      String       @id @default(uuid())
  points         Int
  time_stamp     DateTime     @default(now())
  team_member    Team_Members @relation(fields: [team_member_id], references: [member_id])
  team_member_id String
}

// Room table
model Room {
  room_id         String   @id @default(uuid())
  time_stamp      DateTime @default(now())
  room_number     String
  building_number Int
  is_clean        Boolean
  is_active       Boolean
  type_of_room    String
}

// Restrooms table
model Restrooms {
  restroom_id String @id @default(uuid())
}

// Ancillary table
model Ancillary_Areas {
  ancillary_id String @id @default(uuid())
}

// Independent Living table
model Independent_Living {
  independent_id String @id @default(uuid())
}

// Assisted Living table
model Assisted_Living {
  assisted_id String @id @default(uuid())
}

// Skilled table
model Skilled {
  skilled_id String @id @default(uuid())
}

// Memory table
model Memory {
  memory_id String @id @default(uuid())
}
